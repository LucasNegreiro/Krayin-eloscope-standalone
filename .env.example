# ------------------------------
# CONFIGURAÇÕES GERAIS
# ------------------------------
APP_NAME="Krayin CRM"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://krayin.enovas.com.br
APP_TIMEZONE=America/Sao_Paulo

# ------------------------------
# BANCO DE DADOS (MySQL 8)
# ------------------------------
DB_CONNECTION=mysql
DB_HOST=krayin_mysql
DB_PORT=3306
DB_DATABASE=krayin_crm
DB_USERNAME=krayin_user
DB_PASSWORD=your_password_here

# ------------------------------
# VARIÁVEIS PARA DOCKER COMPOSE
# ------------------------------
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=krayin_crm
MYSQL_USER=krayin_user
MYSQL_PASSWORD=your_password_here
KRAYIN_DOMAIN=krayin.enovas.com.br

# ------------------------------
# SMTP (Configure conforme necessário)
# ------------------------------
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@example.com
MAIL_FROM_NAME="Krayin CRM"